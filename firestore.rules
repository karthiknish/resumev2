    rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Subscribers collection - anyone can create, authenticated can read
    match /subscribers/{email} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Blogs collection - public read, authenticated write
    match /blogs/{slug} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    // Contacts collection - anyone can create, authenticated can manage
    match /contacts/{contactId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Bytes collection - public read, authenticated write
    match /bytes/{byteId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    // Comments collection - public read, authenticated create
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // Chat history - authenticated only
    match /chatHistory/{sessionId} {
      allow read, write: if request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
  }
}
